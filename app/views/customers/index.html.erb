<h1> Customers </h1>
<% @customers.each do |customer| %>
  <p> <%= link_to customer.name, customer_path(customer) %>
  <%= link_to 'edit', edit_customer_path(customer) %>		
  <%= link to 'delete', customer_path(customer),
              method: :delete,
              data: { confirm: 'Are you sure?' } %> </p>
<% end %>